<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="45dp"
                  android:textColor="@color/mylove"
                  android:textSize="25dp"
                  android:text="名字："
                  android:gravity="center"
                  android:id="@+id/textView_name"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:textColor="@color/mylove"
                android:ems="10"
                android:id="@+id/editText_name"
                android:hint="请输入名字"
                android:singleLine="true"
                android:layout_toRightOf="@id/textView_name"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="45dp"
                  android:gravity="center"
                  android:textColor="@color/mylove"
                  android:textSize="25dp"
                  android:text="电话："
                  android:id="@+id/textView_phoneNumber"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:inputType="phone"
                android:textColor="@color/mylove"
                android:ems="10"
                android:hint="请输入电话"
                android:id="@+id/editText_phoneNumber"
                android:layout_toRightOf="@id/textView_phoneNumber"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="45dp"
                  android:gravity="center"
                  android:textColor="@color/mylove"
                  android:textSize="25dp"
                  android:text="生日："
                  android:id="@+id/textView_birthday"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:inputType="date"
                android:ems="10"
                android:hint="1990-12-31"
                android:id="@+id/editText_birthday"
                android:layout_toRightOf="@id/textView_birthday"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="45dp"
                  android:gravity="center"
                  android:textColor="@color/mylove"
                  android:textSize="25dp"
                  android:text="邮箱："
                  android:id="@+id/textView_email"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editText_email"
                android:hint="123456@qq.com"
                android:layout_toRightOf="@id/textView_email"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="45dp"
                  android:gravity="center"
                  android:textColor="@color/mylove"
                  android:textSize="25dp"
                  android:text="地址："
                  android:id="@+id/textView_address"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/editText_address"
                android:hint="广东"
                android:layout_toRightOf="@id/textView_address"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:layout_height="45dp"
              android:gravity="center"
              android:textColor="@color/mylove"
              android:textSize="25dp"
              android:text="群组："
              android:id="@+id/textView_group"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/spinner_group"
            android:layout_toRightOf="@id/textView_group"/>
    </RelativeLayout>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="删除"
            android:id="@+id/button2"
            android:layout_below="@+id/editText2"
            />
</LinearLayout>