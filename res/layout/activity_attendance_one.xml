<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_text_white">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Register_Input"
            android:focusable="true"
            android:layout_height="60dp"
            android:focusableInTouchMode="true">

            <TextView
                style="@style/Smile.TextView._Black"

                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/date"
                android:textColor="@color/mylove"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_attendance_search_date_up"
                style="@style/Register_Edit"
                android:editable="false"
                android:inputType="text"
                android:longClickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="──"
                android:textColor="@color/mylove"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_attendance_search_date_down"
                style="@style/Register_Edit"
                android:editable="false"
                android:inputType="text"
                android:longClickable="false" />
        </LinearLayout>
    </LinearLayout>

    <org.mo.pmas.activity.fragment.listview.XListView
        android:id="@+id/list_attendance"
        style="@style/Register_Input"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header"
        android:layout_margin="10dp"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:scrollingCache="false" />
</RelativeLayout>