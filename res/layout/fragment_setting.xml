<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_color_text_white">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp">

        <RelativeLayout
                android:id="@+id/layout_login"
                android:layout_width="match_parent"
                android:layout_height="100dp">

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:id="@+id/btn_setting_nologin"
                    android:background="@drawable/btn_login_selector"
                    android:textColor="@color/mylove"
                    android:text="@string/login"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:visibility="visible"/>

            <LinearLayout
                    android:id="@+id/ll_setting_loginned"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical"
                    >
                <RelativeLayout
                        android:id="@+id/layout_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/btn_selector"
                        >

                    <TextView
                            style="@style/Smile.TextView._Black"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/btn_tologin_selector"
                            android:text="@string/set_myinfo"/>

                    <TextView
                            android:id="@+id/tv_set_name"
                            style="@style/Smile.TextView._Black"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/register_bottom_arrow"/>
                </RelativeLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_line_width_2"
                        android:background="@drawable/base_horizontal_line">
                </View>

                <RelativeLayout
                        android:id="@+id/layout_blacklist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/btn_selector">

                    <TextView
                            style="@style/Smile.TextView._Black"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/mylove"
                            android:text="@string/set_blacklist"/>

                    <TextView
                            style="@style/Smile.TextView._Black"
                            android:layout_alignParentRight="true"
                            android:id="@+id/tv_set_back_list"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/register_bottom_arrow"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>


        <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/light_gray"/>

        <RelativeLayout
                android:id="@+id/layout_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:minHeight="50dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp">

            <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/mylove"
                    android:text="@string/weather"/>

            <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_set_weather"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/register_bottom_arrow"/>
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_line_width_2"
                android:background="@drawable/base_horizontal_line">
        </View>

        <RelativeLayout
                android:id="@+id/layout_neighborhood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:minHeight="50dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp">

            <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/mylove"
                    android:text="@string/neighborhood"/>

            <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_set_neighborhood"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/register_bottom_arrow"/>
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_line_width_2"
                android:background="@drawable/base_horizontal_line">
        </View>

        <RelativeLayout
                android:id="@+id/layout_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:minHeight="50dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp">

            <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/mylove"
                    android:text="@string/about"/>

            <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_set_about"
                    android:textColor="@color/mylove"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/register_bottom_arrow"/>
        </RelativeLayout>

        <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/light_gray"/>

        <RelativeLayout
                android:id="@+id/rl_switch_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:minHeight="50dp"
                android:paddingLeft="5dp">

            <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/mylove"
                    android:text="@string/set_voice"/>

            <ImageView
                    android:id="@+id/iv_open_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/on"
                    android:visibility="visible"/>

            <ImageView
                    android:id="@+id/iv_close_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/off"
                    android:visibility="invisible"/>
        </RelativeLayout>

        <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_line_width_2"
                android:background="@drawable/base_horizontal_line">
        </View>

        <RelativeLayout
                android:id="@+id/rl_switch_vibrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:minHeight="50dp">

            <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/mylove"
                    android:text="@string/set_vibrate"/>

            <ImageView
                    android:id="@+id/iv_open_vibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/on"
                    android:visibility="visible"/>

            <ImageView
                    android:id="@+id/iv_close_vibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/off"
                    android:visibility="invisible"/>
        </RelativeLayout>

        <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/light_gray"/>

