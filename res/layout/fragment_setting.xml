<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_text_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:id="@+id/layout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_setting_nologin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_login_selector"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/mylove"
                android:textSize="30sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_setting_loginned"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/layout_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        style="@style/Smile.TextView._Black"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/set_myinfo"
                        android:textColor="@color/btn_tologin_selector" />

                    <TextView
                        android:id="@+id/tv_set_name"
                        style="@style/Smile.TextView._Black"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/register_bottom_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_line_width_2"
                    android:background="@drawable/base_horizontal_line"></View>

                <RelativeLayout
                    android:id="@+id/layout_score_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        style="@style/Smile.TextView._Black"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/score_search"
                        android:textColor="@color/mylove" />

                    <TextView
                        android:id="@+id/tv_set_score_search"
                        style="@style/Smile.TextView._Black"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/register_bottom_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_line_width_2"
                    android:background="@drawable/base_horizontal_line"></View>

                <RelativeLayout
                    android:id="@+id/layout_kaoqin_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        style="@style/Smile.TextView._Black"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/kaoqin_search"
                        android:textColor="@color/mylove" />

                    <TextView
                        android:id="@+id/tv_set_kaoqin_search"
                        style="@style/Smile.TextView._Black"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/register_bottom_arrow" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>


        <View
