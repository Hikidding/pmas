        <RelativeLayout
            android:id="@+id/layout_neighborhood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/neighborhood"
                android:textColor="@color/mylove" />

            <TextView
                android:id="@+id/tv_set_neighborhood"
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/register_bottom_arrow" />
        </RelativeLayout>

        <View
