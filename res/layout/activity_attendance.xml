<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_text_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:id="@+id/layout_AttendRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/AttendRecord"
                android:textColor="@color/mylove" />

            <TextView
                android:id="@+id/tv_set_AttendRecord"
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/register_bottom_arrow" />
        </RelativeLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_width_2"
            android:background="@drawable/base_horizontal_line"></View>

        <RelativeLayout
            android:id="@+id/layout_AttendCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/AttendCount"
                android:textColor="@color/mylove" />

            <TextView
                android:id="@+id/tv_set_AttendCount"
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/register_bottom_arrow" />
        </RelativeLayout>

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_width_2"
            android:background="@drawable/base_horizontal_line"></View>

        <RelativeLayout
            android:id="@+id/layout_AttendForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/AttendForm"
                android:textColor="@color/mylove" />

            <TextView
                android:id="@+id/tv_set_AttendForm"
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/register_bottom_arrow" />
        </RelativeLayout>

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_width_2"
            android:background="@drawable/base_horizontal_line"></View>

        <RelativeLayout
            android:id="@+id/layout_StudentAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/StudentAttendance"
                android:textColor="@color/mylove" />

            <TextView
                android:id="@+id/tv_set_StudentAttendance"
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/register_bottom_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="@color/light_gray" />
    </LinearLayout>


</ScrollView>