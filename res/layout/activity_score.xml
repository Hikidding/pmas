<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/fl_score_search"
        android:name="org.mo.pmas.activity.fragment.ScoreSearchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"></fragment>

    <fragment
        android:id="@+id/fl_score_content"
        android:name="org.mo.pmas.activity.fragment.ScoreShowFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"></fragment>

</LinearLayout>