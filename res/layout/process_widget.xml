<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gaget_body"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_gaget_body"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/query_iv1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#13b3f2"
            android:textSize="20sp" />

        <!--
             <ImageView
            android:id="@+id/query_iv2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/img_rightselector" />
        -->

        <ImageView
            android:id="@+id/query_iv3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/we_add" />

        <ImageView
            android:id="@+id/query_iv4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/refresh" />
    </LinearLayout>

    <ListView
        android:id="@+id/wd_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#40000000"
        android:dividerHeight="1dp" >
    </ListView>

</LinearLayout>