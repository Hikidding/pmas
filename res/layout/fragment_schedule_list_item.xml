<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/list_green_single">
    <TextView
            android:id="@+id/tv_schedule_list_title"
            android:text="标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/mylove"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/clock"
               android:layout_alignParentTop="true"
               android:layout_alignParentRight="true"/>
    <TextView
            android:id="@+id/tv_schedule_list_time"
            android:text="提醒时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/naming"
            android:layout_below="@+id/tv_schedule_list_title"
            android:layout_alignParentRight="true"/>

    <TextView
            android:id="@+id/tv_schedule_list_content"
            android:text="内容"
            android:textColor="@color/naming"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:singleLine="true"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_schedule_list_title"/>
</RelativeLayout>