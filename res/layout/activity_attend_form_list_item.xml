<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_selector">

        <TextView
            android:id="@+id/tv_student_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年级"
            android:textColor="@color/mylove"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈舒华"
            android:layout_centerHorizontal="true"
            android:textColor="@color/mylove"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_lastOccurtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2014-12-16 06:47:39"
            android:textColor="@color/mylove"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_student_name"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_realAttend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际考勤：出勤"
                android:textColor="@color/mylove"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_lastIo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进出口："
                android:textColor="@color/mylove"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>